{
  "groups": [
    {
      "label": "Configuración de la Encuesta",
      "fields": [
        {
          "name": "survey_title",
          "label": "Título de la Encuesta",
          "description": "Texto principal mostrado al inicio",
          "type": "text",
          "default": "Encuesta de Motivación - Apprecio LATAM 2026"
        },
        {
          "name": "logo_url",
          "label": "URL del Logo",
          "type": "url",
          "default": "https://estudios.apprecio.com/hubfs/logo-cobrand-ebook-provokers.png"
        },
        {
          "name": "primary_color",
          "label": "Color Primario",
          "type": "color",
          "default": "#fa345e"
        },
        {
          "name": "webhook_url",
          "label": "Webhook URL (N8N)",
          "description": "Endpoint para enviar respuestas",
          "type": "url",
          "default": "https://n8n.openip.cl/webhook/survey-ebook"
        },
        {
          "name": "show_progress",
          "label": "Mostrar barra de progreso",
          "type": "boolean",
          "default": false
        }
      ]
    },
    {
      "label": "Textos Personalizables",
      "fields": [
        {
          "name": "button_prev_text",
          "label": "Botón Anterior",
          "type": "text",
          "default": "Anterior"
        },
        {
          "name": "button_next_text",
          "label": "Botón Siguiente",
          "type": "text",
          "default": "Siguiente"
        },
        {
          "name": "button_submit_text",
          "label": "Botón Enviar",
          "type": "text",
          "default": "Enviar Respuestas"
        }
      ]
    }
  ]
}
